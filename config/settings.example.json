{
  "logging": {
    "level": "INFO",
    "file": "logs/glyph.log"
  },

  "storage": {
    "incoming_dir": "data/incoming",
    "archive_dir": "data/archive",
    "remote": {
      "enabled": false,
      "type": "none"
    }
  },

  "metadata": {
    "database": "data/metadata.db"
  },

  "security": {
    "hash_algo": "sha256",
    "encryption": {
      "enabled": false,
      "algorithm": "aes-256-gcm",
      "key_env_var": "GLYPH_ENC_KEY"
    }
  },

  "modules": {
    "crypto": {
      "enabled": false,
      "path": "modules/crypto_rust/crypto_module"
    }
  }
}
