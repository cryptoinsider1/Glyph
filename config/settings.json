{
  "project": {
    "name": "Glyph",
    "version": "0.2.0"
  },
  "storage": {
    "incoming_dir": "./data/incoming",
    "archive_dir": "./data/archive",
    "use_remote": false,
    "remote": {
      "host": "raspberrypi.local",
      "user": "pi",
      "path": "/mnt/encrypted_archive/",
      "ssh_key": "~/.ssh/id_rsa_glyph"
    }
  },
  "metadata": {
    "database": "./data/metadata.db",
    "backend": "sqlite"
  },
  "logging": {
    "level": "DEBUG",
    "file": "./logs/glyph.log",
    "json_format": true
  },
  "security": {
    "hash_algo": "sha256",
    "encryption": {
      "enabled": false,
      "algorithm": "aes-256-cbc",
      "key_env_var": "GLYPH_MASTER_KEY"
    }
  },
  "ai": {
    "enabled": false,
    "openai_key_env": "OPENAI_API_KEY",
    "default_model": "gpt-3.5-turbo"
  }
}
